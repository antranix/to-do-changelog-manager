{
  "name": "to-do-changelog-manager",
  "publisher": "AntranixDEV",
  "displayName": "TO-DO Changelog Manager",
  "description": "Manage your TO-DO tasks and changelogs efficiently.",
  "version": "0.0.15",
  "engines": {
    "vscode": "^1.108.0"
  },
  "icon": "resources/img/icon.png",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/antranix/to-do-changelog-manager"
  },
  "categories": [
    "Other"
  ],
  "main": "./dist/extension.js",
  "activationEvents": [
    "onView:todoView",
    "onView:changelogView",
    "onCommand:todo.add",
    "onCommand:todo.complete",
    "onCommand:todo.uncomplete",
    "onCommand:todo.refresh",
    "onCommand:todo.edit",
    "onCommand:todo.remove",
    "onCommand:todo.scanFiles",
    "onCommand:changelog.refresh",
    "onCommand:changelog.addVersion",
    "onCommand:changelog.addEntry",
    "onCommand:changelog.editEntry",
    "onCommand:changelog.removeEntry",
    "onCommand:changelog.removeVersion"
  ],
  "contributes": {
    "commands": [
      {
        "command": "todo.add",
        "title": "‚ûï"
      },
      {
        "command": "todo.complete",
        "title": "‚úîÔ∏è"
      },
      {
        "command": "todo.uncomplete",
        "title": "üîô"
      },
      {
        "command": "todo.refresh",
        "title": "üîÑ"
      },
      {
        "command": "todo.edit",
        "title": "‚úèÔ∏è"
      },
      {
        "command": "todo.remove",
        "title": "‚úñÔ∏è"
      },
      {
        "command": "todo.scanFiles",
        "title": "üëÅÔ∏è"
      },
      {
        "command": "changelog.refresh",
        "title": "üîÑ"
      },
      {
        "command": "changelog.addVersion",
        "title": "‚ûï"
      },
      {
        "command": "changelog.addEntry",
        "title": "‚ûï"
      },
      {
        "command": "changelog.editEntry",
        "title": "‚úèÔ∏è"
      },
      {
        "command": "changelog.removeEntry",
        "title": "‚úñÔ∏è"
      },
      {
        "command": "changelog.removeVersion",
        "title": "‚úñÔ∏è"
      }
    ],
    "viewsContainers": {
      "activitybar": [
        {
          "id": "todoContainer",
          "title": "TO-DO",
          "icon": "dist/resources/img/todo-list.svg"
        },
        {
          "id": "changelogContainer",
          "title": "CHANGELOG",
          "icon": "dist/resources/img/changelog.svg"
        }
      ]
    },
    "views": {
      "todoContainer": [
        {
          "id": "todoView",
          "name": "TO-DO"
        }
      ],
      "changelogContainer": [
        {
          "id": "changelogView",
          "name": "CHANGELOG"
        }
      ]
    },
    "menus": {
      "view/title": [
        {
          "command": "todo.add",
          "when": "view == todoView",
          "group": "navigation"
        },
        {
          "command": "todo.refresh",
          "when": "view == todoView",
          "group": "navigation"
        },
        {
          "command": "todo.scanFiles",
          "when": "view == todoView",
          "group": "navigation"
        },
        {
          "command": "changelog.addVersion",
          "when": "view == changelogView",
          "group": "navigation"
        },
        {
          "command": "changelog.refresh",
          "when": "view == changelogView",
          "group": "navigation"
        }
      ],
      "view/item/context": [
        {
          "command": "todo.complete",
          "when": "view == todoView && viewItem == pending",
          "group": "inline"
        },
        {
          "command": "todo.uncomplete",
          "when": "view == todoView && viewItem == done",
          "group": "inline"
        },
        {
          "command": "todo.edit",
          "when": "view == todoView && (viewItem == pending || viewItem == done)",
          "group": "inline"
        },
        {
          "command": "todo.remove",
          "when": "view == todoView && (viewItem == pending || viewItem == done)",
          "group": "inline"
        },
        {
          "command": "changelog.addEntry",
          "when": "view == changelogView && viewItem == changelogSection",
          "group": "inline"
        },
        {
          "command": "changelog.editEntry",
          "when": "view == changelogView && viewItem == changelogEntry",
          "group": "inline"
        },
        {
          "command": "changelog.removeEntry",
          "when": "view == changelogView && viewItem == changelogEntry",
          "group": "inline"
        },
        {
          "command": "changelog.removeVersion",
          "when": "view == changelogView && viewItem == changelogVersion",
          "group": "inline"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run package",
    "compile": "webpack",
    "watch": "webpack --watch",
    "package": "webpack --mode production --devtool hidden-source-map",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "npm run compile-tests && npm run compile && npm run lint",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.10",
    "@types/node": "22.x",
    "@types/vscode": "^1.108.0",
    "@types/uuid": "^10.0.0",
    "@vscode/test-cli": "^0.0.12",
    "@vscode/test-electron": "^2.5.2",
    "copy-webpack-plugin": "^13.0.1",
    "eslint": "^9.39.2",
    "ts-loader": "^9.5.4",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.52.0",
    "webpack": "^5.104.1",
    "webpack-cli": "^6.0.1"
  },
  "dependencies": {
    "uuid": "^13.0.0"
  }
}
